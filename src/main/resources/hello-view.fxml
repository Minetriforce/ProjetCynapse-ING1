<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.canvas.Canvas?>

<BorderPane xmlns:fx="http://javafx.com/fxml">


    <top>
        <VBox spacing="10.0" alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Label fx:id="welcomeText" text="Welcome to Cynapse!" />
            <Label fx:id="etapeLabel" />
        </VBox>
    </top>

    <center>
        <VBox spacing="10.0" alignment="CENTER">
            <ImageView fx:id="logoImageView" fitHeight="500" fitWidth="500" preserveRatio="true">
                <image>
                    <Image url="@images/logo.png" />
                </image>
            </ImageView>
            <Canvas fx:id="mazeCanvas" width="300" height="300"/>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10.0" alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
            </padding>
            <HBox spacing="10.0" alignment="CENTER">
                <Button fx:id="generationLabyrinth" text="generation" onAction="#onStartGenerationClick"/>
                <Button fx:id="resolutionLabyrinth" text="Resolve" onAction="#onStartResolutionClick" disable="true"/>

            </HBox>
        </VBox>
    </bottom>

</BorderPane>
