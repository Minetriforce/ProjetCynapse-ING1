<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>


<BorderPane xmlns:fx="http://javafx.com/fxml">

    <top>
        <VBox spacing="5.0" alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="11.0"/>
            </padding>

            <Label fx:id="welcomeText" text="Welcome to Cynapse!" />
        </VBox>
    </top>

    <center>
        <ImageView fx:id="logoImageView" fitHeight="1200" fitWidth="700" preserveRatio="true">
            <image>
                <Image url="@images/logo.png" />
            </image>
        </ImageView>
    </center>

    <bottom>
        <VBox spacing="5.0" alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="11.0"/>
            </padding>
                
                <HBox spacing="10.0" alignment="CENTER">
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                    <Button fx:id="resolutionLabyrinth" text="Resolve" onAction="#onStartResolutionClick" disable="true"/>
                    <Button fx:id="generationLabyrinth" text="generation" onAction="#onStartGenerationClick"/>
                </HBox>
        </VBox>
    </bottom>

</BorderPane>
